<?xml version="1.0" encoding="utf-8"?>
<!--
    MobileCLI Production - AI Choice Overlay Layout

    Shown on new sessions for IP protection.
    Lets user choose an AI assistant or plain terminal.
-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/setup_background">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ai_selection_title"
        android:textColor="@color/setup_text"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <!-- Subtitle -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ai_selection_subtitle"
        android:textColor="@color/setup_text_secondary"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"/>

    <!-- Claude Card (Recommended) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_claude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/ai_claude_secondary"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/ai_claude_title"
                    android:textColor="@color/ai_claude_primary"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RECOMMENDED"
                    android:textColor="@color/ai_claude_primary"
                    android:textSize="10sp"
                    android:background="@drawable/bg_badge"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ai_claude_desc"
                android:textColor="@color/ai_claude_primary"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Gemini Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_gemini"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/ai_gemini_secondary"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ai_gemini_title"
                android:textColor="@color/ai_gemini_primary"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ai_gemini_desc"
                android:textColor="@color/ai_gemini_primary"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Codex Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_codex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/ai_codex_secondary"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ai_codex_title"
                android:textColor="@color/ai_codex_primary"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ai_codex_desc"
                android:textColor="@color/ai_codex_primary"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Basic Terminal Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_terminal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/ai_terminal_secondary"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ai_terminal_title"
                android:textColor="@color/ai_terminal_primary"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ai_terminal_desc"
                android:textColor="@color/ai_terminal_primary"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
