<?xml version="1.0" encoding="utf-8"?>
<!--
    MobileCLI Production - Theme Resources

    Themes:
    - Theme.MobileCLI: Base app theme (Material Design 3)
    - Theme.MobileCLI.NoActionBar: For fullscreen activities
    - Theme.MobileCLI.Terminal: For main terminal view
-->
<resources>
    <!-- Base Application Theme -->
    <style name="Theme.MobileCLI" parent="Theme.Material3.DayNight.DarkActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorOnPrimary">@color/md_theme_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_onPrimaryContainer</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/md_theme_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_onSecondaryContainer</item>

        <!-- Tertiary colors -->
        <item name="colorTertiary">@color/md_theme_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_onTertiaryContainer</item>

        <!-- Error colors -->
        <item name="colorError">@color/md_theme_error</item>
        <item name="colorOnError">@color/md_theme_onError</item>
        <item name="colorErrorContainer">@color/md_theme_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_onErrorContainer</item>

        <!-- Surface colors -->
        <item name="android:colorBackground">@color/md_theme_surface</item>
        <item name="colorSurface">@color/md_theme_surface</item>
        <item name="colorOnSurface">@color/md_theme_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_outline</item>
        <item name="colorOutlineVariant">@color/md_theme_outlineVariant</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/md_theme_primary</item>
        <item name="android:navigationBarColor">@color/terminal_background</item>
    </style>

    <!-- No Action Bar Theme (for fullscreen activities) -->
    <style name="Theme.MobileCLI.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Terminal Theme (dark background) -->
    <style name="Theme.MobileCLI.Terminal" parent="Theme.MobileCLI.NoActionBar">
        <item name="android:colorBackground">@color/terminal_background</item>
        <item name="android:statusBarColor">@color/terminal_background</item>
        <item name="android:navigationBarColor">@color/terminal_background</item>
    </style>

    <!-- Setup Wizard Theme -->
    <style name="Theme.MobileCLI.Setup" parent="Theme.MobileCLI.NoActionBar">
        <item name="android:colorBackground">@color/setup_background</item>
        <item name="android:statusBarColor">@color/setup_background</item>
        <item name="android:navigationBarColor">@color/setup_background</item>
        <item name="colorPrimary">@color/setup_accent</item>
    </style>

    <!-- Dialog Theme -->
    <style name="Theme.MobileCLI.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorOnPrimary">@color/md_theme_onPrimary</item>
        <item name="android:background">@color/drawer_background</item>
    </style>

    <!-- AI Card Styles -->
    <style name="AICard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="AICard.Claude">
        <item name="android:backgroundTint">@color/ai_claude_secondary</item>
    </style>

    <style name="AICard.Gemini">
        <item name="android:backgroundTint">@color/ai_gemini_secondary</item>
    </style>

    <style name="AICard.Codex">
        <item name="android:backgroundTint">@color/ai_codex_secondary</item>
    </style>

    <style name="AICard.Terminal">
        <item name="android:backgroundTint">@color/ai_terminal_secondary</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.MobileCLI.Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/md_theme_primary</item>
    </style>

    <style name="Widget.MobileCLI.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/md_theme_primary</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.MobileCLI.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/md_theme_onSurface</item>
    </style>

    <style name="TextAppearance.MobileCLI.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/md_theme_onSurface</item>
    </style>

    <style name="TextAppearance.MobileCLI.Terminal" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/terminal_foreground</item>
    </style>
</resources>
