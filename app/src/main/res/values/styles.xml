<?xml version="1.0" encoding="utf-8"?>
<!--
    MobileCLI Production - Style Resources

    Reusable styles for consistent UI components.
-->
<resources>
    <!-- Extra Key Button Style -->
    <style name="ExtraKeyButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/extra_keys_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Extra Key Button Pressed State -->
    <style name="ExtraKeyButton.Pressed">
        <item name="android:background">@color/extra_keys_pressed</item>
    </style>

    <!-- Navigation Drawer Item Style -->
    <style name="NavDrawerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/drawer_item_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Session Tab Style -->
    <style name="SessionTab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/tab_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:background">@drawable/bg_session_tab</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Session Tab Selected State -->
    <style name="SessionTab.Selected">
        <item name="android:background">@drawable/bg_session_tab_selected</item>
    </style>

    <!-- Setup Progress Style -->
    <style name="SetupProgress">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:indeterminate">false</item>
        <item name="android:max">100</item>
    </style>

    <!-- Dialog Button Style -->
    <style name="DialogButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:textColor">@color/md_theme_primary</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>
