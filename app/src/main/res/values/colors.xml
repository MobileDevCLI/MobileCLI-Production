    <color name="colorBackground">@color/md_theme_surface</color>
    <color name="colorOnBackground">@color/md_theme_onSurface</color>
    <color name="colorSurface">@color/md_theme_surface</color>
    <color name="colorOnSurface">@color/md_theme_onSurface</color>
